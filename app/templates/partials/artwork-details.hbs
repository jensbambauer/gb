<div class="artwork-details">
    <h1>{{title}}</h1>
    <p class="series">{{series}}</p>
    <div class="show-availabilty">
        <p class="starting">From â‚¬399 + Shipping</p>
        <label for="buying-options" class="button">Show Availabilty</label>
    </div>
    <input type="checkbox" class="toggle-trigger" id="buying-options">
    <div class="toggle-box">
        <div class="buying-options">
            <table>
                <thead>
                    <tr>
                        <td colspan="4">Our Store</td>
                    </tr>
                </thead>
                <tbody>
                    {{#each the-new-world.sizes }}
                        <tr>
                            <td colspan="4">
                                <form action="#" method="get" data-role="add-to-cart-form" data-ko-model="artwork-details">
                                    <table class="subtable">
                                        <tbody>
                                            <tr>
                                                <td class="col-1">{{ size }} / {{ edition }}</td>
                                                <td class="col-2">
                                                    <select data-role="selectbox" data-bind="value: priceObject">
                                                        {{#each finishing-options }} 
                                                            <option value='{{price}}' data-weight="{{weight}}">{{title}}</option>
                                                        {{/each}}
                                                    </select>
                                                    <input type="hidden" name="name" value="{{../title}}">
                                                    <input type="hidden" name="finish" data-bind="value: finishOptionText">
                                                    <input type="hidden" name="price" class="price" data-bind="value: price">
                                                    <input type="hidden" name="size" value="{{ size }}">
                                                    <input type="hidden" name="edition" value="{{ edition }}">
                                                    <input type="hidden" name="weight" data-bind="value: weight">
                                                </td>
                                                <td class="col-3 price"><!--ko text: price--><!--/ko--></td>
                                                <td class="col-4"><button type="submit" class="primary">Add to Cart</button></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </form>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
            <table>
                <thead>
                    <tr>
                        <td colspan="4">At Lumas Galleries and Online Store</td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td colspan="3">100cm x 62,5cm / 39.4" x 24.6" / Edition of 100</td>
                        <td class="col-4"><span class="hint-box">Sold Out</span></td>
                    </tr>
                    <tr>
                        <td colspan="3">100cm x 62,5cm / 39.4" x 24.6" / Edition of 100</td>
                        <td class="col-4"><a class="button">Visit Lumas</a></td>                    
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>