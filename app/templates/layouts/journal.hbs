<!doctype html>
<html class="no-js">
    <head>
        <title>{{title}} | Journal of Geebird&Bamby™</title>
        {{>html-head}}
    </head>
    <body>
        <div class="page{{#if transparent-header}} transparent-header{{/if}}">
            {{>header}}
            <div class="main">
                {{#if overview}}
                    <section>
                        {{#withSort journal 'data.date'}}
                            {{#each this.pages }}
                                <article class="content blog previews-{{data.previews}}">
                                    <time>{{formatDate data.date "%m/%d/%Y"}}</time>
                                    {{#gt data.slides.length 1}}
                                        <div class="swiper-container" data-role="slider">
                                            <ul class="slides swiper-wrapper">
                                                {{#each data.slides}}
                                                    <li class="swiper-slide">
                                                        <figure>
															<img src="{{../assets}}{{this.src}}" alt="">
                                                            {{#if this.caption}}
                                                                <figcaption>{{this.caption}}</figcaption>
                                                            {{/if}}
                                                        </figure>
                                                    </li>
                                                {{/each}}
                                            </ul>
											<div class="swiper-button-prev"><svg><use xlink:href="#icon-arrow-left"/></svg></div>
											<div class="swiper-button-next"><svg><use xlink:href="#icon-arrow-right"/></svg></div>
                                        </div>
									{{else}}
										{{#each data.slides}}
											<img class="blog-single-image" src="{{../assets}}{{this.src}}" alt="">
										{{/each}}
                                    {{/gt}}
                                    <div class="collapsed">
                                        {{#markdown}}
                                            {{this.page}}
                                        {{/markdown}}
                                    </div>
                                    <a href="posts/{{this.slug}}/index.html">Continue reading…</a>
								</article>
                            {{/each}}
                        {{/withSort}}
                    </section>
                {{else}}
                    <article class="content blog {{#if meta-page}}meta{{/if}} {{#if fullslider}}fullslider{{/if}}">
						<time>{{formatDate date "%m/%d/%Y"}}</time>
						{{#gt slides.length 1}}
							<div class="swiper-container" data-role="slider">
								<ul class="slides swiper-wrapper">
									{{#each slides}}
										<li class="swiper-slide">
											<figure>
												<img src="{{../assets}}{{this.src}}" alt="">
												{{#if this.caption}}
													<figcaption>{{this.caption}}</figcaption>
												{{/if}}
											</figure>
										</li>
									{{/each}}
								</ul>
								<div class="swiper-button-prev"><svg><use xlink:href="#icon-arrow-left"/></svg></div>
								<div class="swiper-button-next"><svg><use xlink:href="#icon-arrow-right"/></svg></div>
							</div>
						{{else}}
							{{#each data.slides}}
								<img class="blog-single-image" src="{{../assets}}{{this.src}}" alt="">
							{{/each}}
						{{/gt}}

                        {{#markdown}}
                            {{> body }}
                        {{/markdown}}

                        {{#if date}}
                            <p class="back-button">
                                <a href="../../index.html" class="button inverted">View all entries</a>
                            </p>
                        {{/if}}

                    </article>
                {{/if}}

                <section class="content">
                    <ul class="teaser grid">
                        <li class="col-1-3">
                            <a href="{{assets}}/meta/about/index.html" class="teaser-content">
                                <img src="{{assets}}/images/teaser/teaser_about.jpg">
                            </a>
                        </li>
                        <li class="col-1-3">
                            <div class="teaser-content">
                                <img src="{{assets}}/images/teaser/twitter.jpg">
                                <div class="tweets" data-role="tweets">
                                    <h4>Activity on <a href="http://www.twitter.com/geebirdandbamby" target="_blank">@geebirdandbamby</a></h4>
                                    <div class="tweet-container">
                                        <ul data-bind="foreach: tweets">
                                            <li data-bind="css: {active: $index() === 0}">
                                                <a data-bind="text: date, attr: {href: link}" target="_blank"></a><br>
                                                <div data-bind="html: tweet"></div>
                                            </li>
                                        </ul>
                                    </div>
                                    <button class="icon-more more-tweets" data-role="next-tweet"></button>
                                </div>
                            </div>
                        </li>
                        <li class="col-1-3">
                            <a href="http://www.instagram.com/geebirdandbamby" target="_blank" class="teaser-content">
                                <img src="{{assets}}/images/teaser/teaser_instagram.jpg">
                            </a>
                        </li>
                    </ul>
                </section>

                {{>photowall-newsletter }}

            </div>

            {{>footer}}
        </div>

        {{includeSvgSprite "app/images/icon-sprite.svg"}}
        {{>before-body}}
    </body>
</html>
