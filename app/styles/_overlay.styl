.overlay-contents {
    position: absolute;
    left: -3000%;
    top: -3000%;
    
    .flexslider {
        width: 768px;
    }
}

.overlay-background {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
}

.overlay-container {
    position: absolute;
    left: -3000%;
    top: -3000%;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.75);
    z-index: 999;
    opacity: 0;
    overflow: auto;
    transition: 0.5s opacity ease-in-out;
    
    
    &.open {
        opacity: 1;
        position: fixed;
        left: 0;
        top: 0;
    }
    
    h3 {
        font-size: 20px;
        margin-bottom: 1em;
    }
    
    .overlay-wrapper {
        width: 768px;
        margin: 0 auto;
        height: 100%;
        color: black;
        display: table;
        z-index: 2;
        position: relative;

    }
    
    .overlay-content {
        display: table-cell;
        position: relative;
        vertical-align: middle;
    }
    
    .text-content {
        padding: 60px 52px;
        
        p {
            margin-bottom: 16px;
        }
    }
    
    .region-text {
        @extend .button;
        text-align: right;
        float: right;
        padding-top: 39px;
        line-height: 14px;
    }
    
    .close {
        position: absolute;
        right: -48px;
        top: 0;
        cursor: pointer;
    }
    
    .overlay {
        background: white;
        position: relative;
        margin: 48px 0;

        &-footnote {
            color: #ccc;
            transform: translateY(100%);
            text-align: center;

            span {
               background: black;
               padding: 14px 30px;
               display: inline-block;
            }
        }
    }

    .icon-button, .icon-button-small, .button , button {
        &:hover {
            background: #a1a1a1;
            color: black;
        }
    }

   
}