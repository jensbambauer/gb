.collection-intro {
    background: url('../images/collection-intro-bg.jpg');
    padding: 0 128px 60px;
    overflow: hidden;
    position: relative;
    text-align: center;
    min-height: 255px;
    
    .button {
        margin-bottom: 40px;
    }
    
    p {
        font-family: Courier;
        font-weight: bold;
        color: black;
        font-size: 16px;
        line-height: 26px;
        padding: 0 65px 25px 65px;
        text-align: left;
        
        &:last-child {
            border-bottom: 2px solid #cacec6;
        }
    }
    
    h2 {
        transition: all 0.5s ease-in-out;
    }

    .toggle-trigger:checked ~ h2 {
        position: absolute;
        opacity: 0;
    }

}