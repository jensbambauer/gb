.collection-logo-tnw {
    width: 1024px;
    height: 512px;
    background: url('../images/tnw-collection/tnw-title.png');
    background-position: center center;
    background-size: 100% auto;
}

.collection-intro {
    background: url('../images/tnw-collection/tnw_intro_bg.jpg') 0 0;
    padding: 0 128px 0;
    overflow: hidden;
    position: relative;
    text-align: center;
    min-height: 255px;
    
    .button {
        
    }
    
    p {
        font-weight: bold;
        color: white;
        font-size: 16px;
        line-height: 26px;
        padding: 0 65px 25px 65px;
        text-align: left;

        &:last-child {
            border-bottom: 2px solid #cacec6;
        }
    }
    
    h2 {
        transition: all 0.3s 0.1s ease-in-out;
        background: url('../images/tnw-collection/tnw_intro_headline.png');
        background-size: 100% auto;
        width: 506px;
        height: 37px;
        margin: 0 auto;
        text-indent: -3000px;
        margin-top: 76px;
        margin-bottom: 60px;
    }

    .toggle-box {
        transform: translateY(-30px);
        transition: all 0.6s ease-in-out;
    }

    .toggle-trigger:checked + .toggle-box-container .toggle-box {
        transform: translateY(0);
        margin-bottom: 60px;
    }

}