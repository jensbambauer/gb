.collection-logo-tnw {
    width: 1024px;
    height: 512px;
    background: url('../images/tnw-title.png');
    background-position: center center;
    background-size: 100% auto;
}

.collection-intro {
    background: url('../images/collection-intro-bg.jpg') 0px 77%;
    padding: 0 128px 60px;
    overflow: hidden;
    position: relative;
    text-align: center;
    min-height: 255px;
    
    .button {
        
    }
    
    p {
        font-family: Courier;
        font-weight: bold;
        color: black;
        font-size: 16px;
        line-height: 26px;
        padding: 0 65px 25px 65px;
        text-align: left;

        &:last-child {
            border-bottom: 2px solid #cacec6;
        }
    }
    
    h2 {
        transition: all 0.3s 0.1s ease-in-out;
        background: url('../images/tnw_intro_headline.png');
        background-size: 100% auto;
        width: 506px;
        height: 37px;
        margin: 0 auto;
        text-indent: -3000px;
        transform: translateY(76px);
    }

    .toggle-box {
        transform: translateY(-30px);
        transition: opacity 0.6s 0.3s ease-in-out;
    }

    .toggle-trigger:checked + .toggle-box-container .toggle-hide {
        opacity: 0;
        transform: translateY(50px);
        transition: all 0.3s ease-in-out;
    }

    .toggle-trigger:checked + .toggle-box-container .toggle-box {
        transform: translateY(0);
        transition: opacity 0.6s 0.3s ease-in-out;
    }

}