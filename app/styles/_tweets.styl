.teaser-content .tweets {
    position: relative;
    color: black;
    padding: 24px 32px;
    width: 100%;
    height: 100%;
    background-color: #f7f7f7;
    
    h4 {
        text-align: center;
        margin-bottom: 20px;

        a {
            color: #999999;
        }
    }
    
    .tweet-container {
        position: relative;
        overflow: hidden;
		height: 98px;
        
        ul {
            position: absolute;
            transition: 0.5s all ease-in-out;
            width: 100%;
        }
    }
    
    ul li {
        background: transparent;
        text-transform: none;
        text-align: left;
        @extend $typewriter;
        font-size: 13px;
        margin-bottom: 30px;
		
		div {
			height: 84px;
			overflow: hidden;
			word-break: break-word;
		}
        
        author , a{
            color: #999999;
        }
        
        span {
            position: static;
            padding: 0;
            display: inline;
            background: transparent;
        }
    }

	a[data-expanded-url] {
		font-size: 1px;
		letter-spacing: -1px;
		color: transparent;

		&:before {
			content: attr(href);
			font-size: 13px;
			letter-spacing: normal;
			color: #000;
		}
	}
    
    .more-tweets {
        color: black;
        position: absolute;
        width: 40px;
        height: 40px;
        background: transparent;
        bottom: 0px;
        left: 50%;
        margin-left: -20px;
        padding: 0;
    }
}