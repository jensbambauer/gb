.teaser-content .tweets {
    position: relative;
    color: black;
    padding: 24px 32px;
    width: 100%;
    height: 100%;
    
    h4 {
        text-align: center;
        margin-bottom: 20px;

        a {
            color: #999999;
        }
    }
    
    .tweet-container {
        position: relative;
        overflow: hidden;
        height: 100px;
        
        ul {
            position: absolute;
            transition: 0.5s all ease-in-out;
            width: 100%;
        }
    }
    
    ul li {
        background: transparent;
        text-transform: none;
        text-align: left;
        @extend $typewriter;
        font-size: 13px;
        height: 100px;
        margin-bottom: 30px;
        
        author , a{
            color: #999999;
        }
        
        span {
            position: static;
            padding: 0;
            display: inline;
            background: transparent;
        }
    }
    
    .more-tweets {
        position: absolute;
        width: 40px;
        height: 40px;
        background: transparent;
        bottom: 0px;
        left: 50%;
        margin-left: -20px;
        padding: 0;
    }
}