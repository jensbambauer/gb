.button-list {
    button {
        width: 100%;
    }

    li {
        margin-bottom: 4px;

        &:last-child {
            margin-bottom: 0;
        }
    }
}

button , .button {
    display: inline-block;
    background: white;
    color: black;
    border: 0;
    cursor: pointer;
    @extend $uppercase;
    font-family: 'nimbussanbold';
    font-size: 12px;
    padding: 0 30px;
    line-height: 32px;
    text-align: center;
    white-space: nowrap;
    border-radius: 0;
    -webkit-touch-callout: none; /* iOS Safari */
        -webkit-user-select: none; /* Safari */
         -khtml-user-select: none; /* Konqueror HTML */
           -moz-user-select: none; /* Firefox */
            -ms-user-select: none; /* Internet Explorer/Edge */
                user-select: none;

    &.primary {
        background-color: #4b9e70;
        color: white;
    }

    &.inverted {
        background-color: black;
        color: white;

        &:hover {
           background-color: white;
           color: black;
        }
    }

    a:hover & {
        &.inverted {
            background-color: white;
            color: black;
        }
    }

}

.hint-box {
    @extend .button;

    background: transparent;
    color: #c74a46;
    border: 2px solid #c74a46;
    line-height: 30px;
}

.outline-button {
    @extend .button;

    background: transparent;
    color: white;
    border: 2px solid white;
    line-height: 30px;
}

input[type="text"] , input[type="email"], textarea {
    @extend $uppercase;
    font-family: 'nimbussanbold';
    font-size: 12px;
    font-weight: normal;
    cursor: default;
    padding: 0 15px;
    color: black;
    -webkit-appearance: none;
    outline: none;
    border: none;
    height: 32px;
}


textarea {
    text-align: left;
    line-height: 22px;
    padding-top: 5px;
}

.input-submit-group {
    input[type="email"] {
        display: block;
        float: left;
        width: 154px;
    }
}
