.collection-thumbnails-wrapper {
    width: 1024px;
    position: relative;
    overflow: hidden;
}

.collection-thumbnails {
    overflow: hidden;
    background-size: 100%;
    
    li {
        float: left;
        width: 256px;
        height: 256px;
        
        
        &.collection-title {
            width: 512px;
            
            h1 {
                text-indent: -3000%;
            }
        }
        
        a {
            position: relative;
            width: 100%;
            height: 100%;
            text-indent: -3000%;
            display: block;
            overflow: hidden;
            
            span {
                position: absolute;
                bottom: 0;
                left: 50%;
                transform: translateX(-50%) translateY(100%);
                display: block;
                text-indent: 0;
                color: white !important;
				background: black !important;
                transition: all 0.4s ease-in-out;
            }
            
            &:before {
                content: "";
                display: block;
                width: 100%;
                height: 100%;
                position: absolute;
                left: 0;
                top: 0;
                background-image: url(../images/tnw-collection/tnw-thumb-sprite.jpg);
                background-size: 400% auto;
                filter: grayscale(100%) brightness(0.3);
                transition: all 0.4s ease-in-out;
            }
            
            &:after {
                content: "";
                display: block;
                width: 100%;
                height: 100%;
                position: absolute;
                left: 0;
                top: 0;
                background-image: url(../images/tnw-collection/thumb-logos.png);
                background-size: 400% auto;
                transition: all 0.4s ease-in-out;
            }
            
            &:hover , &.hover {
                &:before {
                    filter: grayscale(0%) brightness(1);
                }
                
                 &:after {
                     transform: scale(0.8);
                     opacity: 0;
                 }
                 span {
                     transform: translateX(-50%) translateY(0);
                 }
            }
            
            &.the-modern-gentleman {
                &:after {
                    
                }
            }
            
            &.fox-theatre {
                &:before , &:after {
                    background-position: -256px 0;
                }
            }
            
            &.trans-pacific-terminal {
                &:before , &:after {
                    background-position: -512px 0;
                }
            }
            &.all-mart {
                &:before , &:after {
                    background-position: -768px 0;
                }
            }
            &.the-goodlife {
                &:before , &:after {
                    background-position: 0 -256px;
                }
            }
            &.liquor-swamp {
                &:before , &:after {
                    background-position: -256px -256px;
                }
            }
            &.broken-hearts-hotel {
                &:before , &:after {
                    background-position: 0 -512px;
                }
            }
            &.ever-mall {
                &:before , &:after {
                    background-position: 0px -512px;
                }
            }
            &.oasis-diner {
                &:before , &:after {
                    background-position: -256px -512px;
                }
            }
            &.world-of-drugs {
                &:before , &:after {
                    background-position: -512px -512px;
                }
            }
            &.broken-hearts-hotel {
                &:before , &:after {
                    background-position: -768px -512px;
                }
            }
        }
    }
 }
.collection-thumbnails-background {
	width: 1024px;
	height: 980px;
	position: relative;

	li {
		position: absolute;
		width: 100%;
		height: 100%;

		a {
			position: absolute;
			display: block;
			width: 100%;
			text-indent: -3000px;
			transform: rotate(-45deg);
			z-index: 3;

			&.free {
				height: 500px;
				width: 1420px;
				left: -400px;
				top: -196px;
			}

			&.forever-sunshine {
				height: 403px;
				top: 289px;
				left: -199px;
				width: 1420px;
				opacity: 0.5;
			}

			&.the-isle {
				width: 1420px;
				height: 500px;
				top: 500px;
				left: 179px;
			}

			&.hover + div {
				filter: grayscale(0) brightness(1);
			}
		}

		div {
			background-size: 100% auto;
			background-repeat: no-repeat;
			filter: grayscale(100%) brightness(.3);
			transition: all 0.4s;
			height: 100%;
			position: relative;

			&.free {
				background-image: url(../images/mart-collection/mart_collection_diagonal_free-1x.png);
				@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
					background-image: url(../images/mart-collection/mart_collection_diagonal_free-2x.png);
				}
				z-index: 2;
			}
			&.forever-sunshine {
				background-image: url(../images/mart-collection/mart_collection_diagonal_fsun-1x.jpg);
				@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
					background-image: url(../images/mart-collection/mart_collection_diagonal_fsun-2x.jpg);
				}
			}
			&.the-isle {
				z-index: 2;
				background-image: url(../images/mart-collection/mart_collection_diagonal_isle-1x.png);
				@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
					background-image: url(../images/mart-collection/mart_collection_diagonal_isle-2x.png);
				}
			}
		}
	}
}