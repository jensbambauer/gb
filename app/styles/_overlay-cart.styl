.overlay-cart {
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.75);
    position: fixed;
    top: -2000px;
    z-index: 20;
    overflow: auto;
    color: black;

    .overlay-cart-container {
        position: relative;
        
        .content:before {
            width: 143px;
            height: 48px;
            content: "";
            position: absolute;
            right: 80px;
            top: 0;
            background: white;
            transition: all open-animation ease-in-out;
        }
    }

    .header, .cart-footer , .cart-total , .row {
        opacity: 0;
    }

    &.open {
        top: 0;
        
        .overlay-cart-container .content:before,
        .header,
        .cart-total , .cart-footer,
        .button.primary.push-right {
            animation-duration: 1s;
            animation-iteration-count: 1;
            animation-fill-mode: forwards;
        }
        
        .overlay-cart-container .content:before {
            animation-name: cartReveal;
        }
        
        .header {
            animation-name: fadeIn;
            animation-delay: 0.5s;
        }
        
        .cart-total , .cart-footer {
            animation-name: fadeIn;
            animation-delay: 1.5s;
        }
        
        .cart-total {
            animation-delay: 1s;
        }
        
        .button.primary.push-right {
            /*animation-name: pulse;
            animation-delay: 2s;*/
        }
        
        .row {
            animation-name: flipInX;
            animation-duration: 1s;
            animation-iteration-count: 1;
            animation-fill-mode: forwards;
        }
        
        .cart-rows .row:nth-child(1) {
            animation-delay: 0.4s;
        };
        .cart-rows .row:nth-child(2) {
            animation-delay: 0.6s;
        };
        .cart-rows .row:nth-child(3) {
            animation-delay: 0.8s;
        };
        .cart-rows .row:nth-child(4) {
            animation-delay: 1s;
        };
        .cart-rows .row:nth-child(5) {
            animation-delay: 1.2s;
        };
        .cart-rows .row:nth-child(6) {
            animation-delay: 1.4s;
        };
        .cart-rows .row:nth-child(7) {
            animation-delay: 1.6s;
        };        
            
        
    }

    .content {
        position: relative;
    }
    
    .logo {
        background: transparent;
        position: relative;
        z-index: 2;
    }
    
    .close {
        position: absolute;
        right: 32px;
        top: 0;
    }
    
}

