html {
  box-sizing: border-box;
}
*, *:before, *:after {
  box-sizing: inherit;
}

body {
    background: black;
    margin: 0;
    min-width: 1024px;
    position: relative;
    padding-bottom: 100px;
    color: white;
    font-family: 'nimbussanbold';
    font-size: 12px;
    letter-spacing: 0px;
    padding-bottom: 500px;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    -moz-font-feature-settings: 'liga', 'kern';
}

svg {
  width: 25px;
  height: 48px;
}

$uppercase {
    text-transform: uppercase;
    letter-spacing: 3px;
}

$typewriter {
    font-family: Courier;
    font-weight: bold;
    letter-spacing: 0;
    font-size: 14px;
    line-height: 16px;
}

$squarebutton {
    background: black;
    color: white;
    display: block;
    height: 48px;
    width: 48px;
    float: left;
    transition: all 0.3s;
    font-size: 28px;
    line-height: 48px;
    text-align: center;
    cursor: pointer;

            &:hover {
                background: white;
                color: black;
            }
}

h4 {
    text-transform: none;
    font-size: 16px;
    letter-spacing: normal;
}

p.text {
    font-family: 'Courier';
    font-size: 16px;
    letter-spacing: normal;
    line-height: 1.5;
}

header {
    height: 48px;
    width: 100%;
    position: fixed;
    z-index: 25;
    left: 0;
    top: 0;
    transform: translate3d(0,0,0);
    backface-visibility: hidden;

    &.transparent {
        background: transparent;
    }

    .content {
        position: relative;
    }
}

.logo {
    margin-left: 32px;
    width: 256px;
    height: 48px;
    background: black;
    display: block;
    padding: 11px 0px 11px 32px;
}

.page {
    padding-top: 48px;

    &.transparent-header {
        padding-top: 0px;
    }
}

.icon-button {
    width: 48px;
    height: 48px;
    background: black;
    font-size: 28px;
    line-height: 48px;
    text-align: center;
    display: inline-block;
    color: white;
}

.icon-button-small {
    @extend .icon-button;
    width: 32px;
    height: 32px;
    color: white;

    svg {
        margin-top: -7px;
        margin-left: -2px;
        width: 20px;
    }
}

.scroll-arrow {
    @extend .icon-button;
    position: fixed;
    bottom: 0;
    left: 50%;
    margin-left: -24px;
}

.grid {
    width: 100%;
    overflow: hidden;

    .col {
        float: left;
    }

	.col-1-2 {
		width: 50%;
		float: left;
	}

    .col-1-3 {
        width: 33.33%;
        float: left;
    }

    .col-1-4 {
        width: 25%;
        float: left;
    }

    .offset-1-3 {
        margin-left: 33%;
    }
}

.teaser-container {
    position: relative;

    h3 {
        padding: 0px 63px;
		margin-top: 64px;
		margin-bottom: 26px;
        color: #999999;
		font-size: 20px;
    }
}

.teaser {
    list-style: none;

    li {
        background: grey;
    }

    .teaser-content {
        position: relative;
        display: block;
        text-align: center;
        @extend $uppercase;
        height: 192px;

        img {
            display: block;
            width: 100%;
            position: absolute;
            left: 0;
            top: 0;
            transition: 0.3s all;
        }
        span {
            position: relative;
            z-index: 2;
            padding: 9px 33px;
            display: inline-block;
            background: black;
            line-height: 1.2;
            transition: all 0.3s;

            &.center {
                background: transparent;
                top: 50%;
                margin-top: -15px;
            }
        }
        &:hover {
            img {
                filter: brightness(1.4);
            }
            span {
                background: white;
                color: black;
            }
        }
    }

	.col-1-2 .teaser-content {
		height: 288px;
	}

    &.teaser-center {
        .teaser-content span {
            top: 50%;
            margin-top: -15px;
        }
    }

    &.large-teaser {
        .button {
            transition: all 0.6s ease-in-out;
        }
        .collection-logo , img {
            transition: all 0.6s ease-in-out;
        }
        .teaser-content {
            overflow: hidden;
        }
        &:hover {
            img {
                filter: brightness(1);
            }
        }
    }
}

.content {
    max-width: 1024px;
    margin: 0 auto;

    &.blog {
        background: white;
        padding: 100px 32px 97px;
        color: black;
    }

    &.blog + .content.blog {
        padding-top: 0;;
    }

    &.fullslider {
        padding: 0px 32px 97px;
    }
}

.round {
    border-radius: 50%;
}

.price {
    color: #4b9e70;
}

.currency-eu .price:after,
.currency-usa .price:after,
.currency-world .price:after {
    content: "â‚¬";
}

.push-right {
    float: right;
}

.slider-preloader {
    height: 100%;
    background: black url(../images/preloader_black.gif) no-repeat center center;
    background-size: 150px 175px;

    img {
        opacity: 0;
        transition: 0.5s opacity;
    }

    img.lazyloaded {
        opacity: 1;
    }

    .no-anim {
        transition: none;
    }
}

.scrollbar-measure {
    position: absolute;
    top: -9999px;
    width: 50px;
    height: 50px;
    overflow: scroll;
}

