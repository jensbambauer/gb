html {
  box-sizing: border-box;
}
*, *:before, *:after {
  box-sizing: inherit;
}

body {
    background: black;
    margin: 0;
    min-width: 1024px;
    position: relative;
    padding-bottom: 100px;
    color: white;
    font-family: 'nimbussanbold';
    font-size: 12px;
    letter-spacing: 0px;
}

svg {
  width: 25px;
  height: 48px;
}

$uppercase {
    text-transform: uppercase;
    letter-spacing: 3px;
}

$typewriter {
    font-family: Courier;
    font-weight: bold;
    letter-spacing: 0;
    font-size: 14px;
    line-height: 16px;
}

$squarebutton {
    background: black;
    color: white;
    display: block;
    height: 48px;
    width: 48px;
    float: left;
    transition: all 0.5s ease-out;
    font-size: 28px;
    line-height: 48px;
    text-align: center;
    cursor: pointer;
}

h4 {
    text-transform: none;
    font-size: 16px;
    letter-spacing: normal;
}

p.text {
    font-family: 'Courier';
    font-size: 16px;
    letter-spacing: normal;
    line-height: 1.5;
}

header {
    background: black;
    height: 48px;
    width: 100%;
    position: fixed;
    z-index: 2;
    left: 0;
    top: 0;
    transform: translate3d(0,0,0);
    backface-visibility: hidden;

    &.transparent {
        background: transparent;
    }

    .content {
        position: relative;
    }
}

.logo {
    margin-left: 32px;
    width: 256px;
    height: 48px;
    background: black;
    display: block;
    padding: 11px 0px 11px 32px;
}

.page {
    padding-top: 48px;

    &.transparent-header {
        padding-top: 0px;
    }
}

.icon-button {
    width: 48px;
    height: 48px;
    background: black;
    font-size: 28px;
    line-height: 48px;
    text-align: center;
    display: inline-block;
}

.icon-button-small {
    @extend .icon-button;
    width: 32px;
    height: 32px;
}

.scroll-arrow {
    @extend .icon-button;
    position: fixed;
    bottom: 0;
    left: 50%;
    margin-left: -24px;
}

.grid {
    width: 100%;
    overflow: hidden;

    .col {
        float: left;
    }

    .col-1-3 {
        width: 33.33%;
        float: left;
    }

    .col-1-4 {
        width: 25%;
        float: left;
    }

    .offset-1-3 {
        margin-left: 33%;
    }
}

.teaser-container {
    position: relative;

    h3 {
        position: absolute;
        left: 32px;
        top: 0;
        z-index: 2;
        @extend $uppercase;
        padding: 9px 33px;
        background: black;
        color: #999999;
    }
}

.teaser {
    list-style: none;

    li {
        background: grey;
    }

    .teaser-content {
        position: relative;
        display: block;
        text-align: center;
        @extend $uppercase;
        height: 192px;

        img {
            display: block;
            width: 100%;
            position: absolute;
            left: 0;
            top: 0;
        }
        span {
            position: relative;
            z-index: 2;
            padding: 9px 33px;
            display: inline-block;
            background: black;

            &.center {
                background: transparent;
                top: 50%;
                margin-top: -15px;
            }
        }
    }

    &.teaser-center {
        .teaser-content span {
            top: 50%;
            margin-top: -15px;
        }
    }
}

.content {
    max-width: 1024px;
    margin: 0 auto;

    &.blog {
        background: white;
        padding: 100px 32px 97px;
        color: black;
    }

    &.fullslider {
        padding: 0px 32px 97px;
    }
}

.round {
    border-radius: 50%;
}

.price {
    color: #4b9e70;
}

.currency-eu .price:after,
.currency-us .price:after,
.currency-world .price:after {
    content: "â‚¬";
}

.push-right {
    float: right;
}

.preloader {
    background: black;

    img {
        transition: 1s all;
        transform: scale(1);
    }

    &.preloading {
        img {
            opacity: 0;
            transform: scale(1.05);
        }
    }
}

.slider-preloader {
    height: 100%;

    img {
        transition: 1s all;
    }

    .no-anim {
        transition: none;
    }
}

.preloader.preloading , .slider-preloader.preloading {
    background: black url(../images/90.GIF) no-repeat center center;

    img {
        opacity: 0;
    }
}

.toggle-switch {

    .on {
        display: none;
    }

    &.toggled {
        .off {
            display: none;
        }
        .on {
            display: inline;
        }
    }

}
