.photowall {
    position: relative;
    min-height: 192px;
    transition: all 1s ease-in-out;
    background: black;
    
    &.full {
        height: 100%;
    }
    
    &.flat {
        height: 192px;
    }
    
    .wrapper {
        width: 200%;
    }
    
    .photowall-content {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
        display: flex;
        @extend $uppercase;
        
        .newsletter {
            margin: auto;
            display: flex;
            
            .form-cols {
                display: flex;

                & > * {
                    align-self: center;
                    margin-left: 30px;

                    &:first-child {
                        margin-left: 0px;
                    }
                }
            }

            p {
                text-align: right;
                line-height: 1.25;

                &.success {
                    text-align: center;
                    padding: 0 80px;
                    display: none;
                }
            }
        }
    }
    
    .col {
        transition: all 2s cubic-bezier(0.785, 0.135, 0.150, 0.860);
        opacity: 0;
        
        &.no-animation {
            transition-duration: 0s;
        }
        
        &:nth-child(1) {
            margin-top: -20px;
        }
        &:nth-child(3) {
            margin-top: -20px;
        }
    }
    
    &.ready .col {
        opacity: 1;
    }
    
    
    &:after {
        content: "";
        position: absolute;
        left: -10%;
        top: 0;
        width: 120%;
        height: 100%;
        box-shadow:inset 0 30px 50px 0 rgba(0,0,0,0.45);
        pointer-events: none;
    }
    
    img {
        display: block;
        filter: grayscale(100%) brightness(25%);
        transition: all 0.5s;
        
        &:hover {
            filter: grayscale(80%) brightness(60%);
        }
    }
    
    .quote {
        font-family: Courier;
        font-size: 20px;
        letter-spacing: 0;        
        text-transform: none;
        padding: 0 145px;
        margin: auto;
        line-height: 24px;
        
        p {
            font-weight: normal;
            color: white;
            font-style: italic;
            margin-bottom: 18px;
        
            &:before , &:after {
                content: '"';
                display: inline;
            }
        }
        .author {
            color: #999999;
        }
    }
    
    .error-response {
        padding-top: 10px;
        position: absolute;
    }
}
